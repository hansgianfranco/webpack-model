@keyframes pulse
	0%
		transform scale(0.8)
	50%
		transform scale(1)
	100%
		transform scale(0.8)
@keyframes flash
	0%
		opacity 1
		transform translateY(0)
	50%
		opacity 0.6
		transform translateY(2px)

@keyframes pulse2
	0%
		transform scale3d(1, 1, 1)
	50%
		transform scale3d(1.05, 1.05, 1.05)
	100%
		transform scale3d(1, 1, 1)